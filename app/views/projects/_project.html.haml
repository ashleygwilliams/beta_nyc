%hr
%li
  = link_to project.name, project, {:class=>"unit-title"}
  -if current_user?(project.user)
    %span.options
      =link_to "delete", project, method: :delete,
                                data: { confirm: "Are you sure?" },
                                title: project.name
      |
      =link_to "edit", edit_project_path(project)
  %p #{project.description}