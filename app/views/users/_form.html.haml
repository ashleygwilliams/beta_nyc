= form_for @user, {:html=>{:class=>"form-horizontal"}} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2 #{pluralize(@user.errors.count, "error")} prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li #{msg}

  .field.control-group
    .control-label
      = f.label :name
    .controls
      = f.text_field :name
  .field.control-group
    .control-label
      = f.label :email
    .controls
      = f.text_field :email
  .field.control-group
    .control-label
      = f.label :githandle
    .controls
      = f.text_field :githandle
  .field.control-group
    .control-label
      = f.label :cellphone
    .controls
      = f.text_field :cellphone
  %hr/
  .action.control-group
    .controls
      = f.submit "Submit", {:class=>"btn btn-primary"}