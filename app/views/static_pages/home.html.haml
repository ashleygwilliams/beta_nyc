.main.red
  .row-fluid
    .logo.span4
      =image_tag "beta.png"
      %h1 betaNYC
    .heroinner.span8
      %h2.aphorism
        %span THE 
        %span.highlight ENGINEERING CLASS
        %span WILL
        %span NOT
        %span.highlight SPONTANEOUSLY 
        %span BECOME
        %span.highlight POLITICAL
      %hr
      %h2.action you should #{link_to "join us", volunteer_path, {:class=>"btn-white"}}

%section
  .row-fluid
    .column.span6
      .columnheader.blue
        %h1 brigade projects
      .maininner  
        %ul
          -if @projects
            = render @projects
        = link_to "see more", projects_path, {:class=>"pull-right btn-white"}
    .column.span6
      .columnheader.grey
        %h1 upcoming events
      .maininner
        %ul
          -if @events
            = render @events
        = link_to "see more", events_path, {:class=>"pull-right btn-white"}
