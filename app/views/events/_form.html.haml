= form_for @event, {:html=>{:class=>"form-horizontal"}} do |f|
  //= render 'shared/error_messages'
  .field.control-group
    .control-label
      = f.label :name
    .controls
      = f.text_field :name
  .field.control-group
    .control-label
      = f.label :meetup_url
    .controls
      = f.text_field :meetup_url
  .field.control-group
    .control-label
      = f.label :location
    .controls
      = f.text_field :location
  .field.control-group
    .control-label
      = f.label :when
    .controls
      = f.datetime_select :when
  .field.control-group
    .control-label
      = f.label :description
    .controls
      = f.text_area :description
  .action.control-group
    .controls
      = f.submit "Submit", {:class=>"btn btn-primary btn-large"}
